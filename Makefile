# **************************************************************************** #
# *                              GENERAL INFO                                * #
# **************************************************************************** #

NAME			:=			transcendence

# **************************************************************************** #
# *                                 DOCKER                                   * #
# **************************************************************************** #

COMPOSE			:=			docker-compose --project-name $(NAME)
COMPOSE_FILE	:=			./srcs/docker-compose.yml

# **************************************************************************** #
# *                                  RULES                                   * #
# **************************************************************************** #

all:	up

up:
	$(COMPOSE) -f $(COMPOSE_FILE) up -d --build

clean:
	$(COMPOSE) -f $(COMPOSE_FILE) down --volumes --remove-orphans
	docker volume prune -f

.PHONY: clean 
