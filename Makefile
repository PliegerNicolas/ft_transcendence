NAME			:=			transcendence

# **************************************************************************** #
# *                                 DOCKER                                   * #
# **************************************************************************** #

COMPOSE			:=			docker-compose
COMPOSE_FILE	:=			./srcs/docker-compose.yml

# **************************************************************************** #
# *                                  RULES                                   * #
# **************************************************************************** #

all:	up

up:
	mkdir -p "${HOME}/data/postgresql"
	$(COMPOSE) -f $(COMPOSE_FILE) up -d --build

clean:
	$(COMPOSE) -f $(COMPOSE_FILE) down --volumes --remove-orphans
	docker volume prune -f

re:		clean up

.PHONY: up clean re
